{
  "type": "object",
  "title": "Document",
  "description": "Root document with version and metadata.",
  "additionalProperties": false,
  "required": ["version", "metadata"],
  "properties": {
    "version": { "type": "string", "description": "Schema version string." },
    "metadata": {
      "type": "object",
      "title": "Metadata",
      "description": "Author and timestamp.",
      "required": ["author"],
      "properties": {
        "author": { "type": "string" },
        "created_at": { "type": "string" }
      }
    },
    "count": { "type": "integer", "default": 0 },
    "ratio": { "type": "number", "minimum": 0, "maximum": 1 },
    "small_count": { "type": "integer", "minimum": 0, "maximum": 255 },
    "content": {
      "type": "object",
      "required": ["headline"],
      "properties": {
        "headline": { "type": "string" },
        "body": {
          "type": "object",
          "title": "BodySection",
          "required": ["text"],
          "properties": {
            "text": { "type": "string" },
            "format": { "type": "string", "enum": ["plain", "markdown"], "default": "plain", "description": "Text format." }
          }
        }
      }
    },
    "foo-bar": { "type": "string" },
    "highlights": {
      "type": "array",
      "items": {
        "type": "object",
        "title": "Highlight",
        "properties": {
          "text": { "type": "string" }
        }
      }
    },
    "published": { "type": "boolean" },
    "score": { "type": "number" },
    "tags": {
      "type": "array",
      "items": { "type": "string" }
    },
    "weights": {
      "type": "array",
      "items": { "type": "number" }
    }
  }
}
