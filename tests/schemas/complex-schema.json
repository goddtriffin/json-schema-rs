{
  "type": "object",
  "title": "Document",
  "additionalProperties": false,
  "required": ["version", "metadata"],
  "properties": {
    "version": { "type": "string" },
    "metadata": {
      "type": "object",
      "title": "Metadata",
      "required": ["author"],
      "properties": {
        "author": { "type": "string" },
        "created_at": { "type": "string" }
      }
    },
    "count": { "type": "integer" },
    "content": {
      "type": "object",
      "required": ["headline"],
      "properties": {
        "headline": { "type": "string" },
        "body": {
          "type": "object",
          "title": "BodySection",
          "required": ["text"],
          "properties": {
            "text": { "type": "string" },
            "format": { "type": "string", "enum": ["plain", "markdown"] }
          }
        }
      }
    },
    "foo-bar": { "type": "string" },
    "highlights": {
      "type": "array",
      "items": {
        "type": "object",
        "title": "Highlight",
        "properties": {
          "text": { "type": "string" }
        }
      }
    },
    "published": { "type": "boolean" },
    "score": { "type": "number" },
    "tags": {
      "type": "array",
      "items": { "type": "string" }
    },
    "weights": {
      "type": "array",
      "items": { "type": "number" }
    }
  }
}
